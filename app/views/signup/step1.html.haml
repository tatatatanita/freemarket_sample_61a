.single-container
  = render partial: "new-account-header"
  .single-container__single-main
    .single-container__single-main__account-single-container
      .single-container__single-main__account-single-container__registration-title
        会員情報入力
      = form_for @user, url: step2_signup_index_path, :builder => FormHelper::CustomFormHelper, class: "single-container__single-main__account-single-container__registration-form", method: :get do |f|
        %br
        ニックネーム
        %br
        = f.text_field :nickname  #, value: @snsusername（あとで実装予定）
        %br
        メールアドレス
        %br
        = f.email_field :email  #, value: @snsuseremail（あとで実装予定）
        %br
        パスワード
        %br
        = f.password_field :password
        %br
        パスワード（確認）
        %br
        = f.password_field :password_confirmation
        %br
        お名前（全角）
        %br
        = f.text_field :last_name_kanji
        %br
        = f.text_field :first_name_kanji
        %br
        お名前カナお名前カナ（全角）
        %br
        = f.text_field :last_name_kana
        %br
        = f.text_field :first_name_kana
        %br
        生年月日
        %br
        != sprintf(f.date_select(:birthday, prefix:'birthday',  prompt:"--", use_month_numbers:true, start_year:2019, end_year:1900, date_separator:'%s'),'年','月')+'日'
        %br
        = f.submit 'Continue'
  = render partial: "new-account-footer"

