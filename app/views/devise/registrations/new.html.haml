.single-container
  .single-container__single-main
    .single-container__single-main__l-single-container
      .single-container__single-main__l-single-container__registration-head
        新規会員登録
      .single-container__single-main__l-single-container__registration-form
        .single-container__single-main__l-single-container__registration-form__l-single-content
          .btn-default__btn-mail
            = link_to "メールアドレスで登録する", step1_signup_index_path(resource_name)
            - if devise_mapping.omniauthable?
              - resource_class.omniauth_providers.each do |provider|
                .btn-default__btn-sns__btn-sns-facebook
                  - if OmniAuth::Utils.camelize(provider) == "Facebook"
                    = link_to "Facebookで登録する", omniauth_authorize_path(resource_name, provider)
                .btn-default__btn-sns__btn-sns-google
                  - if OmniAuth::Utils.camelize(provider) == "GoogleOauth2"
                    = link_to "Googleで登録する", omniauth_authorize_path(resource_name, provider)