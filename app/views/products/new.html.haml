
%h1  出品フォーム
= form_for @product do |f|
  %h4 出品画像
  = f.fields_for :images do |i|
    = i.file_field :image_url
  %br/
  %h4 商品名
  = f.text_field :title, placeholder: '商品名（必須 40文字まで）'
  %br/
  %h4 商品の説明
  = f.text_area :text, placeholder: '商品の説明'
  %br/
  %h4 カテゴリー
  .listing-product-detail__category
    = f.select :categories, @category_parent_array, {}, {:name => 'product[categories][]', id: 'parent_category'}
  %br/
  %h4 配送料の負担
  = f.fields_for :freight do |freight|
    = freight.select :freight, [["送料込み(出品者負担)","1"],["着払い(購入者負担)","2"]], prompt: "---"
  %h4 発送元の地域
  = f.fields_for :root_area do |r|
    = r.select :root_area, [["北海道","北海道"],["青森","青森"],["岩手","岩手"],["宮城","宮城"],["秋田","秋田"],["山形","山形"],["福島","福島"],["茨城","茨城"],["栃木","栃木"],["群馬","群馬"],["埼玉","埼玉"],["千葉","千葉"],["東京","東京"],["神奈川","神奈川"]], prompt: "---"
  %h4 発送までの日数
  = f.fields_for :day do |d|
    = d.select :day, [["1~2日で発送","1"],["2~3日で発送","2"],["4~7日で発送","3"]], prompt: "---"
  %h4 価格
  = f.number_field :price, placeholder: '例) 300'
  %br/
  = f.hidden_field :saler_id, value: current_user.id
  %br/ 
  = f.submit :"出品する"

  = link_to 'もどる', :back


