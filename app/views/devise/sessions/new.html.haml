.single-container
  .single-container__single-main
    .single-container__single-main__login-panel
      .single-container__single-main__login-panel__login-no-account
        アカウントをお持ちでない方はこちら
        %br
        = link_to "新規会員登録", new_user_registration_path
      .single-container__single-main__login-panel__login-form-inner
        - if devise_mapping.omniauthable?
          - resource_class.omniauth_providers.each do |provider|
            .btn-default__btn-sns__btn-sns-facebook
              - if OmniAuth::Utils.camelize(provider) == "Facebook"
                = link_to "Facebookでログイン", omniauth_authorize_path(resource_name, provider)
            .btn-default__btn-sns__btn-sns-google
              - if OmniAuth::Utils.camelize(provider) == "GoogleOauth2"
                = link_to "Googleでログイン", omniauth_authorize_path(resource_name, provider)

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-form-inner
          .login-form-inner__form-group
            = f.email_field :email, placeholder: 'メールアドレス'
          .login-form-inner__form-group
            = f.password_field :password, placeholder: 'パスワード', autocomplete: "off"
          .btn-default__btn-red
            = f.submit "ログイン", class: 'btn'
          = link_to "パスワードをお忘れの方", new_password_path(resource_name)
